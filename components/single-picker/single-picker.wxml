<view class="single-picker__wrapper {{visible ? 'show' : ''}}">
  <view class="single-picker__infos">
    <!-- 顶栏 -->
    <view class="single-picker__bar">
      <view class="single-picker__button" catch:tap="onCancel">取消</view>
      <view class="single-picker__button" catch:tap="onSure">确认</view>
    </view>
    <picker-view class="single-picker__picker" indicator-style="height: 50px;" value="{{value}}" bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{options}}" wx:key="value">
          {{item.label}}
        </view>
      </picker-view-column>
    </picker-view>
  </view>
</view>