.menu-bar__wrapper {
  height: 88rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.menu-bar__item {
  margin: 0 38rpx;
  color: #828282;
  font-size: 28rpx;
}
.menu-bar__cursor {
  width: 104rpx;
  height: 8rpx;
  border-radius: 6rpx;
  transition: all .25s linear;
  background-color: #F82F5C;
  position: absolute;
  bottom: 0;
  left: 0;
}
.menu-bar__item_selected {
  font-weight: bold;
  color: #F82F5C;
}


